extends layouts/main.pug

block content
    div.form-container
        form(method="post")
            label(for="VideoFile") Video File
            input(type="file", id="VideoFile", name="VideoFile" required=true)
            input(type="text", placeholder="Title", name="videoTitle" required=true)
            input(type="text", placeholder="Description", name="videoDescription" required=true)
            input(type="submit", value="Upload Video")